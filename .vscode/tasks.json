{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "MakeAndDebug",
			"command": "/bin/make",
			"args": [
				"-f",
				"${fileDirname}/Makefile",
				"${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
		},
		{
			"label": "Clear",
			"command": "/bin/make",
			"args": [
				"-f",
				"${fileDirname}/Makefile",
				"clear"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "qtest",
			"command": "/bin/make",
			"args": [
				"-f",
				"${fileDirname}/Makefile"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
	]
}